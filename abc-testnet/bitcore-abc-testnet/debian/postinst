#! /bin/sh -e

case "$1" in
	configure)
		adduser --system --home /opt/satoshilabs/bitcore-abc-testnet/home \
			--quiet --gecos "satoshilabs bitcore-abc-testnet" bitcore-abc-testnet
		chown -R bitcore-abc-testnet /opt/satoshilabs/bitcore-abc-testnet/home
		;;
	abort-upgrade|abort-remove|abort-deconfigure)
	;;
	
	*)
	    echo "postinst called with unknown argument \`$1'" >&2
	    exit 1
	;;
esac


#DEBHELPER#

exit 0
